@page
@model WebDatSanPickleBall.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<h2>Quản lý người dùng</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Họ tên</th>
            <th>Vai trò</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FullName</td>
            <td>@user.Role</td>
            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>
                @if (user.Role != "Admin")
                {
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-page="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Xóa</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 