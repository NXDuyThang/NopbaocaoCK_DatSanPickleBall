@using Microsoft.AspNetCore.Identity
@using DAL.Models
@using DAL.Data
@inject UserManager<User> UserManager
@inject ApplicationDbContext _context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WebDatSanPickleBall</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebDatSanPickleBall.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <!-- Header -->
    <header class="bg-light shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.jpg" alt="PickleBall Logo" height="30" class="d-inline-block align-text-top me-2">
                PickleBall Booking
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Courts" asp-action="Index">Sân</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">Lịch đặt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                    </li>
                </ul>
                <form class="d-flex me-3" asp-controller="Courts" asp-action="Index" method="get">
                    <input class="form-control me-2" type="search" name="searchString" placeholder="Tìm kiếm sân..." aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">Tìm</button>
                </form>
                @if (User.Identity.IsAuthenticated)
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    <div class="d-flex align-items-center">
                        <span class="me-3">
                            <i class="bi bi-person-circle"></i>
                            Xin chào, <strong>@(currentUser?.FullName ?? currentUser?.UserName)</strong>
                        </span>
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="d-flex">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-sm">
                            <i class="bi bi-person-plus"></i> Đăng ký
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <!-- Main -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-4" role="contentinfo">
        <div class="container-fluid px-4 text-center">
            <p>&copy; 2025 Hệ thống đặt sân Pickleball. Mọi quyền được bảo lưu.</p>
            <p>Liên hệ: <a href="mailto:hotro@pickleball.vn" class="text-info">hotro@pickleball.vn</a> | Hotline: <a href="tel:0123456789" class="text-info">0123 456 789</a></p>
            <div>
                <a href="https://facebook.com/yourpage" class="text-white me-3" aria-label="Facebook" target="_blank" rel="noopener">Facebook</a>
                <a href="https://zalo.me/yourzalo" class="text-white" aria-label="Zalo" target="_blank" rel="noopener">Zalo</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
