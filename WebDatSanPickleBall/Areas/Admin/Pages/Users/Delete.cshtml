@page "{id}"
@model WebDatSanPickleBall.Areas.Admin.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<h2>Xóa người dùng</h2>
<div class="alert alert-danger">
    <strong>Bạn có chắc chắn muốn xóa người dùng này?</strong>
</div>
<dl class="row">
    <dt class="col-sm-3">Họ tên</dt>
    <dd class="col-sm-9">@Model.User.FullName</dd>
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.User.Email</dd>
    <dt class="col-sm-3">Vai trò</dt>
    <dd class="col-sm-9">@Model.User.Role</dd>
</dl>
<form method="post">
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form> 