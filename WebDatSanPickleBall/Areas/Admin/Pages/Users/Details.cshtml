@page "{id}"
@model WebDatSanPickleBall.Areas.Admin.Pages.Users.DetailsModel
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
<h2>Chi tiết người dùng</h2>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.User.Email</dd>
            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.User.PhoneNumber</dd>
            <dt class="col-sm-3">Vai trò</dt>
            <dd class="col-sm-9">@Model.User.Role</dd>
            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.User.CreatedAt.ToString("dd/MM/yyyy")</dd>
        </dl>
        <a asp-page="Edit" asp-route-id="@Model.User.Id" class="btn btn-warning">Sửa</a>
        <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div> 