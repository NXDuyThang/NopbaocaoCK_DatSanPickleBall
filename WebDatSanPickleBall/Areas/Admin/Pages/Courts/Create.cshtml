@page
@model WebDatSanPickleBall.Areas.Admin.Pages.Courts.CreateModel
@{
    ViewData["Title"] = "Thêm sân mới";
    Layout = "/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">Thêm sân mới</h2>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Court.Name" class="control-label"></label>
                    <input asp-for="Court.Name" class="form-control" />
                    <span asp-validation-for="Court.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Court.Location" class="control-label"></label>
                    <input asp-for="Court.Location" class="form-control" />
                    <span asp-validation-for="Court.Location" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Court.Type" class="control-label"></label>
                    <select asp-for="Court.Type" class="form-control">
                        <option value="">-- Chọn loại sân --</option>
                        <option value="Indoor">Sân trong nhà</option>
                        <option value="Outdoor">Sân ngoài trời</option>
                    </select>
                    <span asp-validation-for="Court.Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Court.Price" class="control-label"></label>
                    <input asp-for="Court.Price" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Court.Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Court.Description" class="control-label"></label>
                    <textarea asp-for="Court.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Court.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <div class="form-check">
                        <input asp-for="Court.IsActive" class="form-check-input" />
                        <label asp-for="Court.IsActive" class="form-check-label"></label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Thêm sân</button>
                    <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 